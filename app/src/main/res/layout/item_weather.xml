<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/itemWeatherCodeImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/itemWeatherDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Monday"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemWeatherTempTxt"
        app:layout_constraintStart_toEndOf="@+id/itemWeatherTempTxt" />

    <TextView
        android:id="@+id/itemWeatherTempTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="4 C"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemWeatherCodeImg"
        app:layout_constraintStart_toEndOf="@+id/itemWeatherCodeImg"
        app:layout_constraintTop_toTopOf="@+id/itemWeatherCodeImg" />

    <TextView
        android:id="@+id/itemWeatherCodeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Rain"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/itemWeatherTempTxt"
        app:layout_constraintTop_toTopOf="@+id/itemWeatherTempTxt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="24dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    
</androidx.constraintlayout.widget.ConstraintLayout>