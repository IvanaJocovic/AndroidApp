<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/weatherCodeImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="#E91E63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/currentTempTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="3 C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weatherCodeImg" />

    <TextView
        android:id="@+id/minTempTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="min 2 C"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/weatherCodeImg"
        app:layout_constraintTop_toTopOf="@+id/weatherCodeImg" />

    <TextView
        android:id="@+id/maxTempTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="max 6C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/minTempTxt"
        app:layout_constraintStart_toStartOf="@+id/minTempTxt"
        app:layout_constraintTop_toBottomOf="@+id/minTempTxt" />

    <ImageView
        android:id="@+id/sunriseImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="#E91E63"
        app:layout_constraintEnd_toStartOf="@+id/sunriseTimeTxt"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/sunriseTimeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="22:00"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/sunriseImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sunriseImg" />

    <TextView
        android:id="@+id/sunsetTimeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="06:00"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/sunsetImg"
        app:layout_constraintEnd_toEndOf="@+id/sunriseTimeTxt"
        app:layout_constraintStart_toStartOf="@+id/sunriseTimeTxt"
        app:layout_constraintTop_toBottomOf="@+id/sunriseTimeTxt" />

    <ImageView
        android:id="@+id/sunsetImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#E91E63"
        app:layout_constraintEnd_toEndOf="@+id/sunriseImg"
        app:layout_constraintStart_toStartOf="@+id/sunriseImg"
        app:layout_constraintTop_toBottomOf="@+id/sunriseImg"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <SeekBar
        android:id="@+id/seekBar"
        android:padding="8dp"
        android:layout_width="0dp"
        android:background="#E91E63"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:progressTint="#FBF6F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentTempTxt" />


</androidx.constraintlayout.widget.ConstraintLayout>